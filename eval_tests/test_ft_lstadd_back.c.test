#include "libft.h"
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

void	del(void *ptr, size_t size)
{
	printf("deleting ptr with size %zu\n", size);
	free(ptr);
}

int		main(void)
{
	t_list	*head;
	t_list	*seek;

	head = ft_lstnew("hello", 6);
	ft_lstadd_back(&head, ft_lstnew("there", 6));
	ft_lstadd_back(&head, ft_lstnew("world", 6));
	ft_lstadd_back(&head, ft_lstnew("!", 2));
	seek = head;
	while (seek != NULL)
	{
		printf("[%s]", (char *) seek->content);
		seek = seek->next;
		if (seek != NULL)
			printf(" ");
		else
			printf("\n");
	}
	ft_lstdel(&head, &del);
}
